{% extends 'base.html.twig' %}

{% block title %}StudentProfile{% endblock %}

{% block body %}
    <h1>StudentProfile</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student_profile.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ student_profile.name }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ student_profile.code }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ student_profile.description }}</td>
            </tr>
            <tr>
                <th>Solved</th>
                <td>{{ student_profile.solved ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ student_profile.createdAt ? student_profile.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ student_profile.updatedAt ? student_profile.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_student_profile_index') }}">back to list</a>

    <a href="{{ path('app_student_profile_edit', {'id': student_profile.id}) }}">edit</a>

    {{ include('student_profile/_delete_form.html.twig') }}
{% endblock %}
