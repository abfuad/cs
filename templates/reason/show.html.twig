{% extends 'base.html.twig' %}

{% block title %}Reason{% endblock %}

{% block body %}
    <h1>Reason</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reason.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ reason.name }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ reason.code }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ reason.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ reason.createdAt ? reason.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ reason.updatedAt ? reason.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reason_index') }}">back to list</a>

    <a href="{{ path('app_reason_edit', {'id': reason.id}) }}">edit</a>

    {{ include('reason/_delete_form.html.twig') }}
{% endblock %}
